# =============================================================================
# Antaryami OS - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
NODE_ENV=development
DEBUG=true

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./antaryami.db

# -----------------------------------------------------------------------------
# Anthropic Claude API (Primary LLM)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# -----------------------------------------------------------------------------
# Pinecone (Long-term Memory / Vector Database)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=pcsk_your-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=antaryami-knowledge

# -----------------------------------------------------------------------------
# Google Cloud Vertex AI
# -----------------------------------------------------------------------------
GOOGLE_VERTEX_API_KEY=your-vertex-ai-key-here
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# -----------------------------------------------------------------------------
# OpenAI API (Alternative LLM Provider)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=

# -----------------------------------------------------------------------------
# DeepSeek API (Alternative LLM Provider)
# -----------------------------------------------------------------------------
DEEPSEEK_API_KEY=your-deepseek-key-here

# -----------------------------------------------------------------------------
# OpenRouter API (Multi-model Gateway)
# -----------------------------------------------------------------------------
OPENROUTER_API_KEY=sk-or-your-key-here

# -----------------------------------------------------------------------------
# Ollama (Local LLM)
# -----------------------------------------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_MEMORY=true
ENABLE_BROWSER_AGENT=true
ENABLE_MULTIMODAL=true
ENABLE_VOICE=false
ENABLE_LOCAL_LLM=false

# -----------------------------------------------------------------------------
# Memory Settings
# -----------------------------------------------------------------------------
MEMORY_BACKEND=pinecone
SHORT_TERM_MEMORY_SIZE=100
LONG_TERM_MEMORY_ENABLED=true

# -----------------------------------------------------------------------------
# Browser Agent Settings
# -----------------------------------------------------------------------------
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Default LLM Provider (anthropic|openai|deepseek|openrouter|ollama|vertex)
# -----------------------------------------------------------------------------
DEFAULT_LLM_PROVIDER=anthropic
